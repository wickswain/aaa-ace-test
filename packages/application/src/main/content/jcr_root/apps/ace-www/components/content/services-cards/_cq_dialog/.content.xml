<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Services Cards"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <titleinfo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Main Title"
                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"/>
                            <header-title-text-font-color
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                                colorsPath="/etc/config/ace-www/components/common/textfontcolors"
                                fieldDescription="Font color for the main title"
                                fieldLabel="Main Title Color"
                                freestylePalette="{Boolean}true"
                                name="./headerTitleTextFontColor"/>
                        </items>
                    </titleinfo>
                    <row-amount
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldDescription="Select the amount of rows needed"
                        fieldLabel="Number of rows"
                        name="./rowamount">
                        <items jcr:primaryType="nt:unstructured">
                            <one
                                jcr:primaryType="nt:unstructured"
                                text="One"
                                value="{Long}1"/>
                            <two
                                jcr:primaryType="nt:unstructured"
                                text="Two"
                                value="{Long}2"/>
                            <three
                                jcr:primaryType="nt:unstructured"
                                text="Three"
                                value="{Long}3"/>
                            <four
                                jcr:primaryType="nt:unstructured"
                                text="Four"
                                value="{Long}4"/>
                        </items>
                    </row-amount>
                    <backgroundinfo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Background"
                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <bgcolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                                colorsPath="/apps/ace-www/components/content/services-cards/config/backgroundcolors"
                                fieldDescription="Select the background color"
                                fieldLabel="Background Color"
                                freestylePalette="{Boolean}true"
                                name="./backgroundColor"/>
                        </items>
                    </backgroundinfo>
                    <cardmainjumplink
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Component Main Jump Link Id"
                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <jump-link-id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Jump Link Id"
                                fieldLabel="Jump Link Id"
                                name="./jumpLinkId"/>
                        </items>
                    </cardmainjumplink>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
