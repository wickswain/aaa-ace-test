            <tilestab-1
                jcr:primaryType="nt:unstructured"
                jcr:title="Tile-1"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <tiletitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter title for tile Icon"
                                fieldLabel="Tile Title"
                                name="./tile1/title"/>
                            <tileicon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowupload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Please Select Icon to be displayed in the navigation tile"
                                fieldLabel="Tile Icon"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./tile1/tileIcon"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <tileIconAltText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter alt text for tile Icon"
                                fieldLabel="Tile Icon Alt Text"
                                name="./tile1/tileIconAltText"/>
                            <linkurl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="If it is a AAA App URL, please enter URL in the format-http://[Domain].[ClubName].aaa.com/home.html"
                                fieldLabel="Link URL"
                                name="./tile1/linkURL"
                                rootPath="/content"/>
                            <open-in-new-tab-flag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Please check box if the link has to open in new Tab"
                                name="./tile1/openInNewTabFlag"
                                text="Open link in new Window?"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </tilestab-1>
