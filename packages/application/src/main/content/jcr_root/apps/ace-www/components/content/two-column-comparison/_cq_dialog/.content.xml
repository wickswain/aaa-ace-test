<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Two Column Comparison"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Title/Subheading"
                            required="{Boolean}false"
                            name="./title"/>
                    <bodycopy
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Text/Body Copy"
                            required="{Boolean}false"
                            name="./textbodycopy" />

                    <columncount
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldDescription="Select the amount of column pairs"
                            fieldLabel="Number of Columns"
                            required="{Boolean}true"
                            name="./columncount">
                        <items jcr:primaryType="nt:unstructured">
                            <one
                                    jcr:primaryType="nt:unstructured"
                                    text="One"
                                    value="{Long}1"/>
                            <two
                                    jcr:primaryType="nt:unstructured"
                                    text="Two"
                                    value="{Long}2" />
                            <three
                                    jcr:primaryType="nt:unstructured"
                                    text="Three"
                                    value="{Long}3"/>
                        </items>
                    </columncount>
                    <backgroundcolor
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                            colorsPath="/apps/ace-www/components/content/icon-row/config/backgroundcolors"
                            fieldDescription="Please select the background color to fill the entire component to change the default selection of white background."
                            fieldLabel="Background Color"
                            freestylePalette="{Boolean}true"
                            name="./backgroundColor"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>