<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Column Content"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Title/Subheading"
                            name="./title"/>
                    <mainimage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/fileupload"
                            allowupload="{Boolean}false"
                            autoStart="{Boolean}false"
                            class="cq-droptarget"
                            fieldLabel="Background Image"
                            fileNameParameter="./mainimagefile"
                            fileReferenceParameter="./image"
                            mimeTypes="[image]"
                            multiple="{Boolean}false"
                            title="Upload Image Asset"
                            uploadUrl="${suffix.path}"
                            useHTML5="{Boolean}true"/>
                    <mainimagealttext
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Alt Text"
                            fieldDescription="Alt text for the main image"
                            required="true"
                            name="./mainalttext"/>
                    <bgcolor
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                            colorsPath="/apps/ace-www/components/content/full-width-image/config/bgcolor"
                            fieldDescription="Select the background color"
                            fieldLabel="Background Color"
                            freestylePalette="{Boolean}true"
                            name="./bgColor"/>
                    <backgroundimage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/fileupload"
                            allowupload="{Boolean}false"
                            autoStart="{Boolean}false"
                            class="cq-droptarget"
                            fieldLabel="Background Image"
                            fileNameParameter="./backgroundimagefile"
                            fileReferenceParameter="./backgroundImage"
                            mimeTypes="[image]"
                            multiple="{Boolean}false"
                            title="Upload Image Asset"
                            uploadUrl="${suffix.path}"
                            useHTML5="{Boolean}true"/>
                    <backgroundimagealttext
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Background Alt Text"
                            fieldDescription="Select the background color"
                            required="true"
                            name="./backgroundalttext"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>