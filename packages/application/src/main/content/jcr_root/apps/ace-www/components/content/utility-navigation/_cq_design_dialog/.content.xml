<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Global Footer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <leftsidelink1
                jcr:primaryType="nt:unstructured"
                jcr:title="Left Side Link - 1"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <icon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Select small image for request roadside icon"
                                fieldLabel="Icon Image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./file"
                                title="Drop Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <iconalttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Icon Alt Text"
                                name="./alt"/>
                            <linklabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter link label."
                                fieldLabel="Link Label"
                                name="./requestRoadsideLinkLabel"/>
                            <linkto
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="If it is a AAA App URL, please enter URL in the format-http://[Domain].[ClubName].aaa.com/home.html"
                                fieldLabel="Link To"
                                name="./requestRoadsideLinkTo"
                                rootPath="/content"
                                value="http://[Domain].[ClubName].aaa.com/home.html"/>
                            <openinnewtabflag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Please select the check box if the link has to open in new tab."
                                name="./requestRoadsideOpenNewTabFlag"
                                text="Open in new window?"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </leftsidelink1>
            <leftsidelink2
                jcr:primaryType="nt:unstructured"
                jcr:title="Left Side Link - 2"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <linklabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter link label."
                                fieldLabel="Link Label"
                                name="./contactusLinkLabel"/>
                            <linkto
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="If it is a AAA App URL, please enter URL in the format-http://[Domain].[ClubName].aaa.com/home.html"
                                fieldLabel="Link To"
                                name="./contactusLinkTo"
                                rootPath="/content"
                                value="http://[Domain].[ClubName].aaa.com/home.html"/>
                            <openinnewtabflag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Please select the check box if the link has to open in new tab."
                                name="./contactusOpenNewTabFlag"
                                text="Open in new window?"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </leftsidelink2>
            <rightsidelink1
                jcr:primaryType="nt:unstructured"
                jcr:title="Right Side Link - 1"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <linklabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter link label."
                                fieldLabel="Link Label"
                                name="./findabranchLinkLabel"/>
                            <linkto
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="If it is a AAA App URL, please enter URL in the format-http://[Domain].[ClubName].aaa.com/home.html"
                                fieldLabel="Link To"
                                name="./findabranchLinkTo"
                                rootPath="/content"
                                value="http://[Domain].[ClubName].aaa.com/home.html"/>
                            <openinnewtabflag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Please select the check box if the link has to open in new tab."
                                name="./findabranchOpenNewTabFlag"
                                text="Open in new window?"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </rightsidelink1>
            <rightsidelink2
                jcr:primaryType="nt:unstructured"
                jcr:title="Right Side Link - 2"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <linklabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter link label."
                                fieldLabel="Link Label"
                                name="./signinLinkLabel"/>
                            <linkto
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="If it is a AAA App URL, please enter URL in the format-http://[Domain].[ClubName].aaa.com/home.html"
                                fieldLabel="Link To"
                                name="./signinLinkTo"
                                rootPath="/content"
                                value="http://[Domain].[ClubName].aaa.com/home.html"/>
                            <openinnewtabflag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Please select the check box if the link has to open in new tab."
                                name="./signinOpenNewTabFlag"
                                text="Open in new window?"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </rightsidelink2>
            <search
                jcr:primaryType="nt:unstructured"
                jcr:title="Search"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <searchlabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Search Label"
                                name="./searchLabel"
                                value="Search"/>
                            <pagepath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Search Page Path"
                                name="./searchPagePath"
                                rootPath="/content/ace-www"
                                value="/content/ace-www/en/search-results.html"/>
                            <placeholder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Placeholder Label"
                                name="./searchPlaceholderLabel"
                                value="Search"/>
                        </items>
                    </columns>
                </items>
            </search>
        </items>
    </content>
</jcr:root>
