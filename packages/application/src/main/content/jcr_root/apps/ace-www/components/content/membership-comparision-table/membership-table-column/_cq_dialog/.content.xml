<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Membership Table Column"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <headerimage
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/fileupload"
                    allowupload="{Boolean}false"
                    autoStart="{Boolean}false"
                    class="cq-droptarget"
                    fieldLabel="Header Image"
                    fileNameParameter="./fileName"
                    fileReferenceParameter="./headerImage"
                    mimeTypes="[image]"
                    multiple="{Boolean}false"
                    title="Upload Image Asset"
                    uploadUrl="${suffix.path}"
                    useHTML5="{Boolean}true"/>
                <header-image-alt-text
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                    fieldDescription="Please enter alt text for the header image"
                    fieldLabel="Header Image Alt Text"
                    name="./headerImageAltText"/>
                <backgroundcolor
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                    colorsPath="/apps/ace-www/components/content/membership-comparision-table/config/backgroundcolors"
                    fieldDescription="Please select the background color to fill the entire component to change the default selection of white background."
                    fieldLabel="Header Background Color"
                    freestylePalette="{Boolean}true"
                    name="./backgroundColor"/>
                <title
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                    fieldDescription="Please enter heading or title."
                    fieldLabel="Header Title"
                    name="./title"
                    required="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
