<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Membership Comparision Table"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <basictab
                jcr:primaryType="nt:unstructured"
                jcr:title="Basic"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <number-of-columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Please Select number of Columns"
                                fieldLabel="Number of Columns"
                                max="{Long}3"
                                min="{Long}0"              
                                name="./columnCount"
                                required="{Boolean}true"
                                text="Select number of Columns"/>
                            <total-row-count
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Please enter total number of rows"
                                fieldLabel="Select Number of Rows"
                                min="{Long}0"
                                name="./totalRowCount"
                                required="{Boolean}true"/>
                            <see-all-row-index
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Please enter number of rows after which 'See all' link should be visible"
                                fieldLabel="Visisble number of Rows"
                                min="{Long}0"
                                name="./seeAllRowIndex"/>
                            <column-highlight
		                        jcr:primaryType="nt:unstructured"
		                        sling:resourceType="granite/ui/components/foundation/form/select"
		                        fieldDescription="Please select column to highlight while comparision"
		                        fieldLabel="Highlight Column"
		                        name="./highlightedColumn">
		                        <items jcr:primaryType="nt:unstructured">
		                            <col1
		                                jcr:primaryType="nt:unstructured"
		                                text="Column 1"
		                                value="one"/>
		                            <col2
		                                jcr:primaryType="nt:unstructured"
		                                text="Column 2"
		                                value="two"/>
		                            <col3
		                                jcr:primaryType="nt:unstructured"
		                                text="Column 3"
		                                value="three"/>
		                        </items>
		                    </column-highlight>
                            <backgroundcolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                                colorsPath="/apps/ace-www/components/content/membership-comparision-table/config/backgroundcolors"
                                fieldDescription="Please select the background color to fill the entire component to change the default selection of white background."
                                fieldLabel="Background Color"
                                freestylePalette="{Boolean}true"
                                name="./backgroundColor"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter heading or title."
                                fieldLabel="Heading/Title"
                                name="./title"/>
                        </items>
                    </columns>
                </items>
            </basictab>
            <modalboxtab
                jcr:primaryType="nt:unstructured"
                jcr:title="Modal Box"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <modal-title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter title for modal box"
                                fieldLabel="Modal Title"
                                name="./modalTitle"/>
                            <save-caption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter caption text for Save Button"
                                fieldLabel="Save Button Caption"
                                name="./saveButtonCaption"/>
                            <close-caption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter caption text for Close Button"
                                fieldLabel="Close Button Caption"
                                name="./closeButtonCaption"/>
                        </items>
                    </columns>
                </items>
            </modalboxtab>
            <jumplink
                jcr:primaryType="nt:unstructured"
                jcr:title="Jumplink "
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <jump-link-id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Jump Link Id"
                                fieldLabel="Jump Link Id"
                                name="./jumpLinkId"/>
                        </items>
                    </columns>
                </items>
            </jumplink>
        </items>
    </content>
</jcr:root>
