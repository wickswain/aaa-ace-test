<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <text
        jcr:primaryType="nt:unstructured"
        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
        enableFont="{Boolean}true"
        enableFormat="{Boolean}true"
        enableStyle="{Boolean}true"
        externalStyleSheets="[/etc/clientlibs/ace-www/base/css/style.css]"
        hideLabel="{Boolean}true"
        key="text"
        name="./text"
        removeSingleParagraphContainer="{Boolean}true"
        useFixedInlineToolbar="{Boolean}true">
        <rtePlugins jcr:primaryType="nt:unstructured">
            <format
                jcr:primaryType="nt:unstructured"
                features="[bold,italic]"/>
            <links
                jcr:primaryType="nt:unstructured"
                features="*"/>
            <styles
                jcr:primaryType="nt:unstructured"
                features="*">
                <styles jcr:primaryType="nt:unstructured">
                    <font-a
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-slab-bold font-a"
                        text="Bold XL Header"/>
                    <font-b
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-slab-bold font-b"
                        text="Bold Header"/>
                    <font-c
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-regular font-c"
                        text="13px All Caps Title"/>
                    <font-d
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-regular font-d"
                        text="12px All Caps Title"/>
                    <font-e
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-light font-e"
                        text="Light Title"/>
                    <font-f
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-medium font-f"
                        text="Medium Title"/>
                    <font-g
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-light font-g"
                        text="Large Body Text"/>
                    <font-h
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-light font-h"
                        text="Small Body Text"/>
                </styles>
            </styles>
            <subsuperscript
                jcr:primaryType="nt:unstructured"
                features="*"/>
            <misctools
                jcr:primaryType="nt:unstructured"
                features="specialchars">
                <specialCharsConfig jcr:primaryType="nt:unstructured">
                    <chars jcr:primaryType="nt:unstructured">
                        <copyright
                            jcr:primaryType="nt:unstructured"
                            entity="&amp;#169;"/>
                        <trademark
                            jcr:primaryType="nt:unstructured"
                            entity="&amp;#8482;"/>
                        <registered
                            jcr:primaryType="nt:unstructured"
                            entity="&amp;#174;"/>
                        <em-dash
                            jcr:primaryType="nt:unstructured"
                            entity="&amp;#8212"/>
                        <en-dash
                            jcr:primaryType="nt:unstructured"
                            entity="&amp;#8211"/>
                    </chars>
                </specialCharsConfig>
            </misctools>
        </rtePlugins>
        <uiSettings jcr:primaryType="nt:unstructured">
            <cui jcr:primaryType="nt:unstructured">
                <inline
                    jcr:primaryType="nt:unstructured"
                    toolbar="[format#bold,format#italic,links#modifylink,links#unlink,links#anchor,#styles,fullscreen#start,control#close,control#save,subsuperscript#superscript,subsuperscript#subscript,misctools#specialchars]">
                    <popovers jcr:primaryType="nt:unstructured">
                        <styles
                            jcr:primaryType="nt:unstructured"
                            items="styles:getStyles:styles-pulldown"
                            ref="styles"/>
                    </popovers>
                </inline>
                <fullscreen
                    jcr:primaryType="nt:unstructured"
                    toolbar="[format#bold,format#italic,links#modifylink,links#unlink,links#anchor,#styles,fullscreen#start,control#close,control#save,subsuperscript#superscript,subsuperscript#subscript,misctools#specialchars]">
                    <popovers jcr:primaryType="nt:unstructured">
                        <styles
                            jcr:primaryType="nt:unstructured"
                            items="styles:getStyles:styles-pulldown"
                            ref="styles"/>
                    </popovers>
                </fullscreen>
            </cui>
        </uiSettings>
    </text>
</jcr:root>
