<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <text
        jcr:primaryType="nt:unstructured"
        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
        enableFont="{Boolean}true"
        enableFormat="{Boolean}true"
        enableStyle="{Boolean}true"
        externalStyleSheets="[/etc/clientlibs/ace-www/base/css/style.css]"
        hideLabel="{Boolean}true"
        key="text"
        name="./text"
        removeSingleParagraphContainer="{Boolean}true"
        useFixedInlineToolbar="{Boolean}true">
        <rtePlugins jcr:primaryType="nt:unstructured">
            <format
                jcr:primaryType="nt:unstructured"
                features="[bold,italic]"/>
            <links
                jcr:primaryType="nt:unstructured"
                features="*"/>
            <styles
                jcr:primaryType="nt:unstructured"
                features="*">
                <styles jcr:primaryType="nt:unstructured">
                    <font-a
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-regular font-a"
                        text="Font Style A"/>
                    <font-b
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-light font-b"
                        text="Font Style B"/>
                    <font-c
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-regular font-c"
                        text="Font Style C"/>
                    <font-d
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-regular font-d"
                        text="Font Style D"/>
                    <font-e
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-regular font-e"
                        text="Font Style E"/>
                    <font-f
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-medium font-f"
                        text="Font Style F"/>
                    <font-g
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-light font-g"
                        text="Font Style G"/>
                    <font-h
                        jcr:primaryType="nt:unstructured"
                        cssName="roboto-light font-h"
                        text="Font Style H"/>
                </styles>
            </styles>
            <subsuperscript
                jcr:primaryType="nt:unstructured"
                features="*"/>
        </rtePlugins>
        <uiSettings jcr:primaryType="nt:unstructured">
            <cui jcr:primaryType="nt:unstructured">
                <inline
                    jcr:primaryType="nt:unstructured"
                    toolbar="[format#bold,format#italic,links#modifylink,links#unlink,links#anchor,#styles,fullscreen#start,control#close,control#save,subsuperscript#superscript,subsuperscript#subscript]">
                    <popovers jcr:primaryType="nt:unstructured">
                        <styles
                            jcr:primaryType="nt:unstructured"
                            items="styles:getStyles:styles-pulldown"
                            ref="styles"/>
                    </popovers>
                </inline>
                <fullscreen
                    jcr:primaryType="nt:unstructured"
                    toolbar="[format#bold,format#italic,links#modifylink,links#unlink,links#anchor,#styles,fullscreen#start,control#close,control#save,subsuperscript#superscript,subsuperscript#subscript]">
                    <popovers jcr:primaryType="nt:unstructured">
                        <styles
                            jcr:primaryType="nt:unstructured"
                            items="styles:getStyles:styles-pulldown"
                            ref="styles"/>
                    </popovers>
                </fullscreen>
            </cui>
        </uiSettings>
    </text>
</jcr:root>
