<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <text
        jcr:primaryType="nt:unstructured"
        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
        enableFont="{Boolean}true"
        enableParaFormat="{Boolean}false"
        enableParagraphFormat="{Boolean}true"
        enableStyle="{Boolean}true"
        externalStyleSheets="[/etc/clientlibs/ace-www/base/css/style.css]"
        hideLabel="{Boolean}true"
        key="text"
        name="./text"
        removeSingleParagraphContainer="{Boolean}true"
        useFixedInlineToolbar="{Boolean}true">
        <rtePlugins jcr:primaryType="nt:unstructured">
            <format
                jcr:primaryType="nt:unstructured"
                features="[bold,italic]"/>
            <links
                jcr:primaryType="nt:unstructured"
                features="*"/>
            <styles
                jcr:primaryType="nt:unstructured"
                features="*">
                <styles jcr:primaryType="nt:unstructured">
                    <heading1
                        jcr:primaryType="nt:unstructured"
                        cssName="a-d a-t a-m"
                        text="Heading1"/>
                    <heading2
                        jcr:primaryType="nt:unstructured"
                        cssName="b-d b-t b-m"
                        text="Heading2"/>
                    <heading3
                        jcr:primaryType="nt:unstructured"
                        cssName="c-d c-t c-m"
                        text="Heading3"/>
                    <heading4
                        jcr:primaryType="nt:unstructured"
                        cssName="d-d d-t d-m"
                        text="Heading4"/>
                    <heading5
                        jcr:primaryType="nt:unstructured"
                        cssName="e-d e-t e-m"
                        text="Heading5"/>
                    <heading6
                        jcr:primaryType="nt:unstructured"
                        cssName="f-d f-t f-m"
                        text="Heading6"/>
                    <paragraph
                        jcr:primaryType="nt:unstructured"
                        cssName="g-d g-t g-m"
                        text="Paragraph"/>
                    <paragraphsmall
                        jcr:primaryType="nt:unstructured"
                        cssName="h-d h-t h-m"
                        text="Small Paragraph"/>
                </styles>
            </styles>
        </rtePlugins>
        <uiSettings jcr:primaryType="nt:unstructured">
            <cui jcr:primaryType="nt:unstructured">
                <inline
                    jcr:primaryType="nt:unstructured"
                    toolbar="[format#bold,format#italic,links#modifylink,links#unlink,links#anchor,#styles,fullscreen#start,control#close,control#save]">
                    <popovers jcr:primaryType="nt:unstructured">
                        <styles
                            jcr:primaryType="nt:unstructured"
                            items="styles:getStyles:styles-pulldown"
                            ref="styles"/>
                    </popovers>
                </inline>
                <fullscreen
                    jcr:primaryType="nt:unstructured"
                    toolbar="[format#bold,format#italic,links#modifylink,links#unlink,links#anchor,#styles,fullscreen#start,control#close,control#save]">
                    <popovers jcr:primaryType="nt:unstructured">
                        <styles
                            jcr:primaryType="nt:unstructured"
                            items="styles:getStyles:styles-pulldown"
                            ref="styles"/>
                    </popovers>
                </fullscreen>
            </cui>
        </uiSettings>
    </text>
</jcr:root>
