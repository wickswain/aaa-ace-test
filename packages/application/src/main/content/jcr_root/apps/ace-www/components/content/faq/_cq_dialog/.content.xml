<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="FAQ"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Text">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <leftsectiontab
                jcr:primaryType="nt:unstructured"
                jcr:title="Left Section"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <bgcolorleft
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                                colorsPath="/etc/config/ace-www/components/common/lightbgcolors"
                                fieldDescription="Please select background color for Left Section"
                                fieldLabel="Left Section Background Color"
                                freestylePalette="{Boolean}true"
                                name="./bgColorLeft"/>
                            <leftsectiontitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter title text for left section"
                                fieldLabel="Title"
                                name="./leftSectionTitle"
                                required="{Boolean}true"/>
                            <faq
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add field' to add a new item"
                                fieldLabel="FAQ Item">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="NODE_STORE"
                                    name="./faqr">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <question
					                                jcr:primaryType="nt:unstructured"
					                                sling:resourceType="granite/ui/components/foundation/form/textarea"
					                                fieldDescription="Please enter Question"
					                                fieldLabel="Question"
					                                name="./question"
					                                required="{Boolean}true"/>
					                            <answer
									                jcr:primaryType="nt:unstructured"
									                sling:resourceType="granite/ui/components/foundation/include"
									                path="/apps/ace-www/components/content/rte/granite/items/text"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </faq>
                        </items>
                    </columns>
                </items>
            </leftsectiontab>
            <rightsectiontab
                jcr:primaryType="nt:unstructured"
                jcr:title="Right Section"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                        	 <bgcolorright
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                                colorsPath="/etc/config/ace-www/components/common/lightgreybgcolors"
                                fieldDescription="Please select background color for Right Section"
                                fieldLabel="Right Section Background Color"
                                freestylePalette="{Boolean}true"
                                name="./bgColorRight"/>
                            <titleicon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowupload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Title Icon"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./titleIcon"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <titleiconalt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter alt text for title icon"
                                fieldLabel="Alt Text"
                                name="./altText"/>
                            <rightsectiontitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter title text for right section"
                                fieldLabel="Title"
                                name="./rightSectionTitle"
                                required="{Boolean}true"/>
                            <link1caption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Caption for Link 1"
                                fieldLabel="Link-1 Caption"
                                name="./link1Caption"/>
                            <link1url
		                        jcr:primaryType="nt:unstructured"
		                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
		                        fieldDescription="Please enter Link 1 URL"
		                        fieldLabel="Link-1 URL"
		                        name="./link1URL"
		                        rootPath="/content"/>
                            <link2caption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Caption for Link 2"
                                fieldLabel="Link-2 Caption"
                                name="./link2Caption"/>
                            <link2url
		                        jcr:primaryType="nt:unstructured"
		                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
		                        fieldDescription="Please enter Link 2 URL"
		                        fieldLabel="Link-2 URL"
		                        name="./link2URL"
		                        rootPath="/content"/>
                        </items>
                    </columns>
                </items>
            </rightsectiontab>
        </items>
    </content>
</jcr:root>
