<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Membership Calculator Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="/apps/ace-www/granite/widgets/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <basictab
                jcr:primaryType="nt:unstructured"
                jcr:title="Basic"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <mc-title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"
                                required="{Boolean}true"/>
                            <title-text-color
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                                colorsPath="/etc/config/ace-www/components/common/textfontcolors"
                                fieldDescription="Select title font text color"
                                fieldLabel="Title/Text Color"
                                freestylePalette="{Boolean}true"
                                name="./textColor"/>
                            <total-savings-area-heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Total Savings Heading"
                                fieldLabel="Total Savings Heading"
                                name="./totalSavingsHeading"
                                text="Total Savings area Heading"/>
                            <itemized-savings-area-heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Itemized Savings Heading"
                                fieldLabel="Itemized Savings Heading"
                                name="./itemizedSavingsHeading"
                                text="Itemized Savings area Heading"/>
                            <mc-image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Select mc image"
                                fieldLabel="MC Image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <alt-text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Alt Text"
                                fieldLabel="Alt Text"
                                name="./altText"/>
                            <jump-link-id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enterJump Link Id"
                                fieldLabel="Jump Link Id"
                                name="./jumpLinkId"/>
                        </items>
                    </columns>
                </items>
            </basictab>
            <totaltab
                jcr:primaryType="nt:unstructured"
                jcr:title="TotalSavings"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <yearly-savings-area-text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Yearly Savings Text"
                                fieldLabel="Yearly Savings Text"
                                name="./yearlySavingsText"
                                text="Yearly Savings Text"/>
                            <yearly-savings-area-number
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Please enter Yearly Savings"
                                fieldLabel="Yearly Savings"
                                name="./yearlySavings"
                                text="Yearly Savings"/>
                            <aaa-membership-text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter AAA Membership Text"
                                fieldLabel="AAA Membership text"
                                name="./aaaMembershipText"
                                text="AAA Membership text"/>
                            <aaa-savings-area-number
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Please enter AAA Membership Charge"
                                fieldLabel="AAA Membership Charge"
                                name="./aaasMembershipCharge"
                                text="AAA Membership Charge"/>
                            <total-savings-area-text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Please enter Total Savings Text"
                                fieldLabel="Total Savings Text"
                                name="./totalSavingsText"
                                text="Total Savings area text"/>
                            <total-savings-area-number
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Please enter Total Savings"
                                fieldLabel="Total Savings"
                                name="./totalSavings"
                                text="Total Savings"/>
                        </items>
                    </columns>
                </items>
            </totaltab>
            <mc-filedset
                jcr:primaryType="nt:unstructured"
                jcr:title="Itemized Savings"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <mc-calculator
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add field' to add a new item"
                                fieldLabel="Membership Calculator"
                                max="{Long}7"
                                min="{Long}4">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="NODE_STORE"
                                    name="./mcfiledset">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <itemized-icon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldLabel="Itemized Icon"
                                                    name="./itemizedIcon"
                                                    rootPath="/content/dam"/>
                                                <icon-alttext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Please enter Icon Alt Text"
                                                    fieldLabel="Icon Alt Text"
                                                    name="./iconAltText"/>
                                                <itemized-savings-area-title
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Please enter titletext"
                                                    fieldLabel="Itemized Savings title"
                                                    name="./itemizedSavingsText"
                                                    text="Itemized Savings title"/>
                                                <itemized-actual-price
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                                    fieldDescription="Please enter Actual Price"
                                                    fieldLabel="Actual Price"
                                                    name="./actualPrice"
                                                    text="Actual Price"/>
                                                <itemized-discount-price
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                                    fieldDescription="Please enter Discount Price"
                                                    fieldLabel="Discount Price"
                                                    name="./discountPrice"
                                                    text="Discount Price"/>
                                                <itemized-savings-area-number
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                                    fieldDescription="Please enter Itemized Savings"
                                                    fieldLabel="Itemized Savings"
                                                    name="./itemizedSavings"
                                                    text="Itemized Savings"/>
                                                <savings-lable
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Savings Lable"
                                                    name="./savingsLable"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </mc-calculator>
                        </items>
                    </columns>
                </items>
            </mc-filedset>
        </items>
    </content>
</jcr:root>
