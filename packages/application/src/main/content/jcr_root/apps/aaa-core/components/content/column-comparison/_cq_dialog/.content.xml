<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Column Comparison"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <basictab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Basic Properties"
                    sling:resourceType="granite/ui/components/foundation/container">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column-count
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                    required="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <two
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/radio"
                                            name="./columnCount"
                                            text="Two Columns"
                                            value="2"/>
                                    <three
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/radio"
                                            name="./columnCount"
                                            text="Three Columns"
                                            value="3"/>
                                </items>
                            </column-count>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Title/Subheading"
                                    required="{Boolean}false"
                                    name="./title"/>
                            <backgroundcolor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="/apps/aaa-core/granite/widgets/colorpicker"
                                    colorsPath="/apps/aaa-core/components/content/column-comparison/config/backgroundcolors"
                                    fieldDescription="Please select the background color to fill the entire component to change the default selection of white background."
                                    fieldLabel="Background Color"
                                    freestylePalette="{Boolean}true"
                                    name="./backgroundColor"/>
                        </items>
                    </columns>
                </items>
            </basictab>
            <jumplink
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Jumplink "
                    sling:resourceType="granite/ui/components/foundation/container">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <jump-link-id
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="Please enter Jump Link Id"
                                    fieldLabel="Jump Link Id"
                                    name="./jumpLinkId"/>
                        </items>
                    </columns>
                </items>
            </jumplink>
        </items>
    </content>
</jcr:root>