<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Global Footer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <links_1
                jcr:primaryType="nt:unstructured"
                jcr:title="Static Links List-1"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Links Heading Label"
                                name="./linksList1Heading"/>
                            <linkfields
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add field' to add a new item"
                                fieldLabel="Links">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="NODE_STORE"
                                    name="./linksList1">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <label
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Link Label"
                                                    name="./linkLabel"/>
                                                <linkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldLabel="Link URL"
                                                    name="./linkURL"
                                                    rootPath="/content"/>
                                                <newtabflag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    fieldDescription="Please select the check box to open the link in new Tab"
                                                    name="./newTabFlag"
                                                    text="Open in new window?"
                                                    value="{Boolean}true"/>
                                                <hidden-field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                    name="./hiddenField"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </linkfields>
                        </items>
                    </columns>
                </items>
            </links_1>
            <links_2
                jcr:primaryType="nt:unstructured"
                jcr:title="Static Links List-2"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Links Heading Label"
                                name="./linksList2Heading"/>
                            <linkfields
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add field' to add a new item"
                                fieldLabel="Links">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="NODE_STORE"
                                    name="./linksList2">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <label
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Link Label"
                                                    name="./linkLabel"/>
                                                <linkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldLabel="Link URL"
                                                    name="./linkURL"
                                                    rootPath="/content"/>
                                                <newtabflag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    fieldDescription="Please select the check box to open the link in new Tab"
                                                    name="./newTabFlag"
                                                    text="Open in new window?"
                                                    value="{Boolean}true"/>
                                                <hidden-field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                    name="./hiddenField1"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </linkfields>
                        </items>
                    </columns>
                </items>
            </links_2>
            <links_3
                jcr:primaryType="nt:unstructured"
                jcr:title="Static Links List-3"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Links Heading Label"
                                name="./linksList3Heading"/>
                            <linkfields
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add field' to add a new item"
                                fieldLabel="Links">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="NODE_STORE"
                                    name="./linksList3">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <label
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Link Label"
                                                    name="./linkLabel"/>
                                                <linkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldLabel="Link URL"
                                                    name="./linkURL"
                                                    rootPath="/content"/>
                                                <newtabflag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    fieldDescription="Please select the check box to open the link in new Tab"
                                                    name="./newTabFlag"
                                                    text="Open in new window?"
                                                    value="{Boolean}true"/>
                                                <hidden-field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                    name="./hiddenField2"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </linkfields>
                        </items>
                    </columns>
                </items>
            </links_3>
            <footericons
                jcr:primaryType="nt:unstructured"
                jcr:title="Footer Icon Properties"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <icon1
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Select small image for download app icon"
                                fieldLabel="Download App Icon"
                                fileNameParameter="./icon1/fileName"
                                fileReferenceParameter="./icon1/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./icon1/file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <icon1alttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Alt Text"
                                name="./icon1/alt"
                                required="{Boolean}true"/>
                            <icon2
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Select small image for download app icon"
                                fieldLabel="Blog Icon"
                                fileNameParameter="./icon2/fileName"
                                fileReferenceParameter="./icon2/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./icon2/file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <icon2alttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Alt Text"
                                name="./icon2/alt"
                                required="{Boolean}true"/>
                            <icon1restype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                ignoreData="{Boolean}true"
                                name="./icon1/sling:resourceType"
                                value="foundation/components/image"/>
                            <icon2restype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                ignoreData="{Boolean}true"
                                name="./icon2/sling:resourceType"
                                value="foundation/components/image"/>
                        </items>
                    </column>
                </items>
            </footericons>
            <socialmedia
                jcr:primaryType="nt:unstructured"
                jcr:title="Social Media Properties"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <linkfields
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add field' to add a new item"
                                fieldLabel="Social Media"
                                max="3">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="NODE_STORE"
                                    name="./socialmedia">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <image
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldDescription="Please select small image to be displayed as a social icon"
                                                    fieldLabel="Social Media Icon"
                                                    name="./smIcon"
                                                    required="{Boolean}false"
                                                    rootPath="/content/dam"/>
                                                <alttext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Alt Text"
                                                    name="./alt"
                                                    required="{Boolean}false"/>
                                                <linkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldLabel="Link URL"
                                                    name="./linkTo"/>
                                                <newtabflag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    fieldDescription="Please select the check box to open the link in new Tab"
                                                    name="./newTabFlag"
                                                    text="Open in new window?"
                                                    value="{Boolean}true"/>
                                                <hidden-field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                    name="./hiddenField3"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </linkfields>
                        </items>
                    </columns>
                </items>
            </socialmedia>
            <footertext
                jcr:primaryType="nt:unstructured"
                jcr:title="Configure Footer Text Properties"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <disclaimertext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldLabel="Disclaimer Text"
                                name="./disclaimer"/>
                            <text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Character limit maximum is 5000 characters."
                                fieldLabel="Copyright Text"
                                name="./copyright"
                                removeSingleParagraphContainer="{Boolean}true"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="specialchars">
                                        <specialCharsConfig jcr:primaryType="nt:unstructured">
                                            <chars jcr:primaryType="nt:unstructured">
                                                <copyright
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#169;"/>
                                                <trademark
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#8482;"/>
                                                <registered
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#174;"/>
                                                <pound
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#163;"/>
                                            </chars>
                                        </specialCharsConfig>
                                    </misctools>
                                    <links jcr:primaryType="nt:unstructured">
                                        <linkDialogConfig
                                            jcr:primaryType="nt:unstructured"
                                            height="{Long}316">
                                            <linkAttributes jcr:primaryType="nt:unstructured">
                                                <linkAdvanced
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/section"
                                                    name="./linkdialog/cq:adhocLinkTrackingTab"
                                                    title="Link tracking"
                                                    value="advanced">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <enable
                                                            jcr:primaryType="nt:unstructured"
                                                            attribute="enabletracking"
                                                            fieldDescription="override analytics framework settings"
                                                            fieldLabel="Custom link tracking"
                                                            name="./linkdialog/cq:adhocLinkTrackingEnableTracking"
                                                            xtype="checkbox">
                                                            <listeners
                                                                jcr:primaryType="nt:unstructured"
                                                                check="function(component){var dlg=component.findParentByType('rtelinkdialog');dlg.enableSCFields(component.checked);}"/>
                                                        </enable>
                                                        <events
                                                            jcr:primaryType="nt:unstructured"
                                                            attribute="adhocevents"
                                                            fieldDescription="e.g.: event2, event7"
                                                            fieldLabel="Include SiteCatalyst events"
                                                            name="./linkdialog/cq:adhocLinkTrackingEvents"
                                                            xtype="textfield"/>
                                                        <evars
                                                            jcr:primaryType="nt:unstructured"
                                                            attribute="adhocevars"
                                                            fieldDescription="e.g.: eVar1: pagedata.url, prop4: 'const'"
                                                            fieldLabel="Include SiteCatalyst variables"
                                                            name="./linkdialog/cq:adhocLinkTrackingEvars"
                                                            xtype="textfield"/>
                                                    </items>
                                                </linkAdvanced>
                                            </linkAttributes>
                                        </linkDialogConfig>
                                    </links>
                                    <edit
                                        jcr:primaryType="nt:unstructured"
                                        defaultPasteMode="plaintext"
                                        stripHtmlTags="{Boolean}true"/>
                                    <undo
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,links#modifylink,links#unlink,links#anchor,misctools#specialchars,fullscreen#start,control#close,control#save]"/>
                                        <fullscreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,links#modifylink,links#unlink,links#anchor,misctools#specialchars,fullscreen#start,control#close,control#save]"/>
                                    </cui>
                                </uiSettings>
                            </text>
                        </items>
                    </columns>
                </items>
            </footertext>
        </items>
    </content>
</jcr:root>
