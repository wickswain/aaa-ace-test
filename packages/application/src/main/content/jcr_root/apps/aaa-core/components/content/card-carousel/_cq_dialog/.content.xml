<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Card Carousel"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="/apps/aaa-core/granite/widgets/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <title
                jcr:primaryType="nt:unstructured"
                jcr:title="Title options"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Title/Subheading"
                                name="./title"/>
                            <backgroundcolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/apps/ace-www/granite/widgets/colorpicker"
                                colorsPath="/apps/aaa-ne-web/components/content/card-carousel/bgcoloroptions"
                                fieldDescription="Please select background color"
                                fieldLabel="Background Color"
                                freestylePalette="{Boolean}true"
                                name="./backgroundColor"/>
                            <ctaflag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Please select the checkbox to enable the CTA button."
                                name="./ctaflag"
                                text="Enable CTA Button?"
                                value="{Boolean}true"/>
                            <ctaflag_x0040_delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./ctaflag@Delete"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </title>
            <carousel-images
                jcr:primaryType="nt:unstructured"
                jcr:title="Carousel Images"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <images
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add field' to add a new item"
                                fieldLabel="Carousel Images"
                                max="{Long}12"
                                min="{Long}4">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="NODE_STORE"
                                    name="./images">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <image
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldDescription="Please select the path to image for carousel."
                                                    fieldLabel="Image"
                                                    name="./image"
                                                    required="true"
                                                    rootPath="/content/dam"/>
                                                <iconalttext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Icon Alt Text"
                                                    name="./iconalttext"
                                                    required="{Boolean}true"/>
                                                <icontitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Icon Title/Label"
                                                    name="./icontitle"
                                                    required="{Boolean}true"/>
                                                <icontext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                    fieldLabel="Icon Text"
                                                    name="./icontext"/>
                                                <ctaurl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Card URL"
                                                    name="./ctaurl"
                                                    required="{Boolean}true"/>
                                                <ctatext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="CTA Text"
                                                    name="./ctatext"/>
                                                <shortmessage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Short Message"
                                                    name="./shortmessage"/>
                                                <messageamount
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Message Amount"
                                                    name="./messageAmount"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </images>
                        </items>
                    </columns>
                </items>
            </carousel-images>
            <jumplink
                jcr:primaryType="nt:unstructured"
                jcr:title="Jumplink "
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <jump-link-id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                disabled="{Boolean}true"
                                fieldDescription="Please enter Jump Link Id"
                                fieldLabel="Jump Link Id"
                                name="./jumpLinkId"
                                value="article-carousel"/>
                        </items>
                    </columns>
                </items>
            </jumplink>
        </items>
    </content>
</jcr:root>
