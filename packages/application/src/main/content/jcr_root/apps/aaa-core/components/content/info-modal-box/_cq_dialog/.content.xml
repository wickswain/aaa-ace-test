<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Information Modal"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <basictab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Basic Properties"
                    sling:resourceType="granite/ui/components/foundation/container">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column-count
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                    required="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <one
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/radio"
                                            name="./columnCount"
                                            text="One Column"
                                            value="1"/>
                                    <two
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/radio"
                                            name="./columnCount"
                                            text="Two Columns"
                                            value="2"/>
                                </items>
                            </column-count>

                            <header-rte
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                    fieldLabel="Header Text"
                                    name="./headerCopy"
                                    removeSingleParagraphContainer="{Boolean}true"
                                    useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <misctools
                                            jcr:primaryType="nt:unstructured"
                                            features="specialchars">
                                        <specialCharsConfig jcr:primaryType="nt:unstructured">
                                            <chars jcr:primaryType="nt:unstructured">
                                                <copyright
                                                        jcr:primaryType="nt:unstructured"
                                                        entity="&amp;#169;"/>
                                                <trademark
                                                        jcr:primaryType="nt:unstructured"
                                                        entity="&amp;#8482;"/>
                                                <registered
                                                        jcr:primaryType="nt:unstructured"
                                                        entity="&amp;#174;"/>
                                                <pound
                                                        jcr:primaryType="nt:unstructured"
                                                        entity="&amp;#163;"/>
                                            </chars>
                                        </specialCharsConfig>
                                    </misctools>
                                    <links jcr:primaryType="nt:unstructured">
                                        <linkDialogConfig
                                                jcr:primaryType="nt:unstructured"
                                                height="{Long}316">
                                            <linkAttributes jcr:primaryType="nt:unstructured">
                                                <linkAdvanced
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/section"
                                                        name="./linkdialog/cq:adhocLinkTrackingTab"
                                                        title="Link tracking"
                                                        value="advanced">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <enable
                                                                jcr:primaryType="nt:unstructured"
                                                                attribute="enabletracking"
                                                                fieldDescription="override analytics framework settings"
                                                                fieldLabel="Custom link tracking"
                                                                name="./linkdialog/cq:adhocLinkTrackingEnableTracking"
                                                                xtype="checkbox">
                                                            <listeners
                                                                    jcr:primaryType="nt:unstructured"
                                                                    check="function(component){var dlg=component.findParentByType('rtelinkdialog');dlg.enableSCFields(component.checked);}"/>
                                                        </enable>
                                                        <events
                                                                jcr:primaryType="nt:unstructured"
                                                                attribute="adhocevents"
                                                                fieldDescription="e.g.: event2, event7"
                                                                fieldLabel="Include SiteCatalyst events"
                                                                name="./linkdialog/cq:adhocLinkTrackingEvents"
                                                                xtype="textfield"/>
                                                        <evars
                                                                jcr:primaryType="nt:unstructured"
                                                                attribute="adhocevars"
                                                                fieldDescription="e.g.: eVar1: pagedata.url, prop4: 'const'"
                                                                fieldLabel="Include SiteCatalyst variables"
                                                                name="./linkdialog/cq:adhocLinkTrackingEvars"
                                                                xtype="textfield"/>
                                                    </items>
                                                </linkAdvanced>
                                            </linkAttributes>
                                        </linkDialogConfig>
                                    </links>
                                    <edit
                                            jcr:primaryType="nt:unstructured"
                                            defaultPasteMode="plaintext"
                                            stripHtmlTags="{Boolean}true"/>
                                    <undo
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                                jcr:primaryType="nt:unstructured"
                                                toolbar="[format#bold,format#italic,subsuperscript#superscript,subsuperscript#subscript,misctools#specialchars,justify#justifyleft,justify#justifycenter,justify#justifyright,links#modifylink,links#unlink,links#anchor,#styles,fullscreen#start,control#close,control#save]"/>
                                        <fullscreen
                                                jcr:primaryType="nt:unstructured"
                                                toolbar="[format#bold,format#italic,subsuperscript#superscript,subsuperscript#subscript,misctools#specialchars,justify#justifyleft,justify#justifycenter,justify#justifyright,links#modifylink,links#unlink,links#anchor,#styles,fullscreen#start,control#close,control#save]"/>
                                    </cui>
                                </uiSettings>
                            </header-rte>

                        </items>
                    </columns>
                </items>
            </basictab>
            <jumplink
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Jumplink "
                    sling:resourceType="granite/ui/components/foundation/container">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <jump-link-id
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="Please enter Jump Link Id"
                                    fieldLabel="Jump Link Id"
                                    name="./jumpLinkId"/>
                        </items>
                    </columns>
                </items>
            </jumplink>
        </items>
    </content>
</jcr:root>
